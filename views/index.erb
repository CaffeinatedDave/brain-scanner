<html>
<head>
  <title>Braaaaaaaiiins</title>
  <link rel="stylesheet" href="/bootstrap.min.css">
  <link rel="stylesheet" href="/brains.css">
  <script src="/jquery-2.1.3.min.js"></script>
  <script src="/brains.js"></script>
  <script type="text/javascript">
  </script>
</head>

<body style="height: 100%; width:100%;">
  <div class="container">
    <% if @debug %>
      <div class="centered" id="debug">
        <div id="debugScore">N/A</div>
      </div>
    <% end %>
    <div class="overlay">
      <div class="centered pulsing" id="idle">&nbsp;</div>
      <div class="centered" id="focus">
        <% "Focus to find the insight".split("").each_with_index do |l,i| %>
        <div class="focusColumn" id="focusCol<%=i+1%>">
          <div class="focusInnerLetters">
            <%=l%>
          </div>
        </div>
        <% end %>
      </div>
      <div class="centered" id="letters">
        <% (1..30).to_a.shuffle.each_with_index do |x,i| %>
        <div class="column" id="col<%=x%>">
          <div class="innerLetters phase<%=i%3%>" id="inner<%=x%>">
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>

  <script type="text/javascript">
    window.version = <%= $version %>;
    window.debug = <%= $debug %>;
    window.onload = function(){
      connectSocket();
    }
  </script>
</body>
</html>
